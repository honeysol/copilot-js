{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "stripInternal": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "references": [
    {
      "copilot-js": "packages/copilot-js",
      "copilot-react": "packages/copilot-react"
    }
  ]
}
